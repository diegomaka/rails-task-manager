<h1>My tasks</h1>

<ul class='task-list'>
  <% @tasks.each do |task| %>
    <li>
    <%= task.completed ? '[X]' : '[ ]' %> <%= link_to(task.title, task_path(task)) %>
    <span><%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: "Delete #{task.title} ?" } %></span>
    </li>
  <% end %>
</ul>

<p><%= link_to 'Add a new task', new_task_path %></p>
